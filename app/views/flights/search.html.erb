
<% if @abc==true then %>
<div class="row">
	<div class="col l10 offset-l1">
		<h2 class="center card-panel hoverable blue-grey darken-1 white-text"> <i> Journey From <%= @origin_city  %> to <%= @dest_city %> </i> </h2>		
	</div>
	
</div>






<div class="container">
  <% k=0 %>
	<% @avail_sol.times do %>
      <div class="row">
        <div class="col s6 m12 l12">
          <div class="card blue-grey darken-1">
            <div class="card-content ">
            	<div class="row">
            		<div class="col l6">
            			<img src="/assets/airport10.png" alt="" class="responsive-img left"><h5 class="left"> <%= @flight_name[k] %> </h5>            		
            		</div>
            		<div class="col l6">
            			<h5 class="right">Price -<%= @price[k] %></h5>		
            		</div>
            	</div>
				<% m=0 %>
		 		<% @segment_size[k].times do %>
              	<div class="row">
            		<div class="col l4">
            			<span>Flight Code- <%= @flight_code[k][m]%> </span> <br></br>
		 		   		<span>Flight Number - <%= @flight_number[k][m]%></span><br></br>
		 		   		<span>Cabin - <%= @cabin[k][m]%></span>            		
            		</div>
            		<div class="col l8">
            				<div class="row">
            					<div class="col l4">
            						<h4><%= @seg_org[k][m] %> </h4> 
            						<p>Departure Time - <%= @dep_time[k][m] %> </p>           		
            					</div>
            					<div class="col l4">
            						<img src="/assets/agt_forward.png" alt="" class="responsive-img center"> 		
            					</div>
            					<div class="col l4">
            					 	<h4> <%= @seg_dest[k][m] %>  </h4>	
            					 	<p> Arrival Time - <%= @arr_time[k][m] %> </p>	
            					</div>
            				</div>
            	  		        <br>
                   			   
            		</div>
            	</div>
		 		   		<% if m!= @segment_size[k]-1 %>
		 		   			<div class="divider"></div>
		 		   		<% end %>
		 		   	 <% m+=1 %>
		 		   <% end %>
            </div>
            <div class="card-action">
               <b><a href="#">Book Now :)</a></b>
            </div>
          </div>
        </div>
      </div>
            
    <% k+=1 %>
  <% end %>
</div>


<% else %>
<div class="white">
	<img class="materialboxed" width="60%" height="50%" src="https://css-tricks.com/images/404.jpg">
	<h2 class="text light-green accent-2"> SORRY  NO SOLUTION FOUND FOR THIS REQUEST :(</h2>
   
</div>
          
<% end %>